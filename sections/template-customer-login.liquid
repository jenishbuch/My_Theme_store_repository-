<div class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8" x-data="{ loginForm: true, pwRecoverForm: false }">

    <div class="max-w-md w-full space-y-8" x-show="loginForm">
        <div>
            <h1 class="text-center text-3xl font-bold mt-6">Sign in to your account</h1>

        </div>

        <div class="mt-8">
            {% form 'customer_login' %}
                {% if form.errors %}
                    <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
                        <strong class="fomt-bold">Error!</strong>
                        <p class="block sm:inline">{{ form.errors | default_errors }}</p>
                    </div>
                {% endif %}

                <div class="my-2">
                    <lable for="email_address" class="sr-only">Email address</lable>

                    <input type="email" 
                        name="cutomer[email]"
                        id="customer_address"
                        autocomplete="email"
                        class="relative block w-full px-3 py-2 border"
                        placeholder="Email address"
                    >

                </div>

                {% if form.password_needed %}
                    <div class="my-2">
                        <lable for="password" class="sr-only">Password</lable>
    
                        <input type="password" 
                            name="cutomer[password]"
                            id="password"
                            autocomplete="current-password"
                            class="relative block w-full px-3 py-2 border"
                            placeholder="Password"
                        >
    
                    </div>

                {% endif %}

                <div class="my-2 text-sm">
                    <a x-on:click="loginForm = false; pwRecoverForm = true" href="#" class="text-gray-400 hover:text-gray-700 underline">
                        Forgot your password?
                    </a>
                </div>

                <div>
                    <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900">Sign in</button>
                </div>

            {% endform %}

        </div>

        {% if shop.checkout.guest_login %}
            <hr class="my-12">
            
            <div>
                <h1 class="mt-6 text-center text-3xl font-bold">continue as a guest</h1>

            </div>

            {% form 'guest_login' %}
                <div>
                    <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900">continue</button>
                </div>

            {% endform %}
            
        {% endif %}

    </div>

    <div class="max-w-md w-full space-y-8" x-show="pwRecoverForm">
        <div>
            <h1 class="text-center text-3xl font-bold mt-6">Recover your password</h1>

        </div>

        <div class="mt-8">
            {% form 'recover_customer_password' %}
                {% if form.errors %}
                    <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
                        <strong class="fomt-bold">Error!</strong>
                        <p class="block sm:inline">{{ form.errors | default_errors }}</p>
                    </div>
                {% endif %}

                <div class="my-2">
                    <lable for="email" class="sr-only">Email address</lable>

                    <input type="email" 
                        name="email"
                        id="email"
                        autocomplete="email"
                        class="relative block w-full px-3 py-2 border"
                        placeholder="Email address"
                    >

                </div>

                <div>
                    <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900">recover password</button>
                </div>

                <div class="top-8 text-sm">
                    <a x-on:click="loginForm = true; pwRecoverForm = false" href="#" class="text-gray-400 hover:text-gray-700 underline">
                        Back to login
                    </a>
                </div>

            {% endform %}

        </div>

    </div>
</div>